#
# My Aliases

#Python
alias sv="source venv/bin/activate"                     # Activate virtualenv.

# Basic System Commands
alias h="history"
alias ll="ls -al"
alias ld="ls -ld */"

# Moving Directories
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

# Pip
alias freeze="pip freeze > requirements.txt"

# Git Commands
alias ga="git add"
alias gph="git push"
alias gpl="git pull"
alias gs="git status"
alias gc="git commit"
alias gcm="git commit -m"
